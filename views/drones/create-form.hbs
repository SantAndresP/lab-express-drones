<form method="POST" action="/drones/create">
    <h2>Create a new drone</h2>
    <div class="form-group">
        <label for="drone-form">Name</label>
        <input name="name" type="text" class="form-control" id="name" placeholder="Name of the drone">
        <small id="name" class="form-text text-muted">Droney McDrone</small>
    </div>

    <div class="form-group">
        <label for="propellers">Propellers</label>
        <input name="propellers" type="number" class="form-control" id="propellers" placeholder="Number of propellers">
    </div>

    <div class="form-group">
        <label for="maxSpeed">Maximum Speed</label>
        <input name="maxSpeed" type="number" class="form-control" id="maxSpeed" placeholder="299792458">
    </div>

    <button type="submit" class="btn btn-outline-primary">Submit</button>
</form>